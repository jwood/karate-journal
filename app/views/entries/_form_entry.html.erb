<% @entry.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>

<p><label for="entry_title">Description</label><br/>
<%= text_field 'entry', 'title', 'size' => 80 %></p>

<p><label for="entry_body">Entry Body</label><br/>
<%= text_area 'entry', 'body', 'cols' => 80, 'rows' => 20 %></p>

<p><label for="entry_type">Entry Type</label><br/>
<%= select("entry", "entry_type_id", EntryType.all.collect { |t| [ t.description, t.id ] }, {}) %></p>

<p><label for="entry_source">Source</label><br/>
<%= text_field 'entry', 'source'  %></p>

